{
    "name": "anik/laravel-mercure",
    "description": "Mercure implementation for Laravel/Lumen to publish messages to the Mercure hub including Laravel Event Broadcasting & Laravel Notification",
    "type": "library",
    "authors": [
        {
            "name": "Syed Sirajul Islam Anik",
            "email": "sirajul.islam.anik@gmail.com"
        }
    ],
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "symfony/mercure": "~0.4.1",
        "illuminate/support": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5|^8.5|^9.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Anik\\Mercure\\": "src/"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpcs --standard=PSR12 ./src"
        ]
    }
}
